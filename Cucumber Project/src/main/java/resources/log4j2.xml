<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

	<Properties>
		<property name="basePath">./test-output/logs</property>
	</Properties>
  <Appenders>
   		<RollingFile name="File" fileName="${basePath}/prints.log" filePattern="${basePath}/prints-%d{yyyy-MM-dd-hh}.log">
   			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
      		<SizeBasedTriggeringPolicy size="25000" />
    	</RollingFile>
    	<Console name="Console" target="SYSTEM_OUT">
      		<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    	</Console>
  </Appenders>
  <Loggers>
  <Logger name="test.java.Dexus.QualityArc.POC" level="trace" additivity="False">
  <AppenderRef ref="File"/>
  </Logger>
    <Root level="trace">
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>